<%= simple_form_for(@flight) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :Fecha %>
    <%= f.input :Destino %>
    <%= f.input :Socio %>
    <%= f.input :Detalles %>
    <%= f.input :Status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
